{% extends "base.twig" %}

{% block content %}
    <h1>Update</h1>

    <form class="form-inline" action="/update" method="POST">
        <div class="form-group mx-sm-3 mb-2">
            <label class="sr-only" for="student-id">ID</label>
            <input class="form-control" id="student-id" name="student-id" placeholder="Student ID" type="text" >
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label class="sr-only" for="name">Name</label>
            <input class="form-control" id="name" name="name" placeholder="Name" type="text" >
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label class="sr-only" for="email">Email</label>
            <input class="form-control" id="email" name="email" placeholder="Email" type="email">
        </div>
        <button class="btn btn-primary mx-sm-3 mb-2" type="submit">Update Student</button>
    </form>

{% endblock %}